{% extends "RsworkGuestbookBundle::layout.html.twig" %}

{% block title %} Create a new Message {% endblock %}

{% block body %}
<div class="hero-unit">
  <h1>Message creation</h1>
</div>

<div class="row-fluid">

  {% include 'RsworkGuestbookBundle:Message:sidebar.html.twig' with {'class': 'span2'} %}

  <div class="span10 well">
    <form action="{{ path('guestbook_create') }}" method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <p>
      <button class="btn btn-primary" type="submit">Create</button>
      </p>
    </form>
  </div>
</div>
{% endblock %}
